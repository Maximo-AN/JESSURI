<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:backgroundTint="@color/rosa_var"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir producto"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de producto"
        android:layout_marginRight="30dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtProdN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/txtPrecioN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Precio"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spnCateN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:entries="@array/Categoria"
            android:imeOptions="actionNext" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtExistenciaN"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:hint="Existencia"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine|text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="Añadir"
        android:textColor="@color/black"
        android:backgroundTint="@color/azul_var"
        android:id="@+id/btnAñadirN" />

</LinearLayout>