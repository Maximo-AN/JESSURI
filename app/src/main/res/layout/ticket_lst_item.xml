<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/rosa_var"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_ticketb" />

        <TextView
            android:id="@+id/txtvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="Lapiz Labial, Rubros 6sdaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:layout_gravity="start|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp">
        <TextView
            android:id="@+id/txtvUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="ComprÃ³: ELNENE"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/txtvNumTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="1"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:layout_gravity="start|top">

        <TextView
            android:id="@+id/txtvFecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold|italic"
            android:text="Generado el: 24/06/2023"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>