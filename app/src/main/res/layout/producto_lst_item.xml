<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/azul_claro"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="Maquillaje de NOse "
            android:textColor="@color/white"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:src="@drawable/ic_bolsa" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/txtvIdProd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="1"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txtvCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Maquillaje"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom">

        <TextView
            android:id="@+id/txtvPrecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="$300.96"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView>